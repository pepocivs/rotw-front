{
  "extends": ["eslint:recommended", "google"],
  "env": {
    "browser": true
  },
  "plugins": [
    "html"
  ],
  "rules": {
    "no-var": "off",
    "new-cap": ["error", { "capIsNewExceptions": ["Polymer"] }],
    "brace-style": "off",
    "linebreak-style": 0,
    "require-jsdoc": "off",    
    "object-curly-spacing": ["error", "never"],    
    "comma-dangle": ["error", "never"],
    "max-len": ["error", {"ignoreComments": true, "code": 100}],
    "prefer-rest-params": 0
  },
  "globals": {
    "Polymer": true,
    "require": true,
    "ga": true
  }
}
